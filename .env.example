# Discord
DISCORD_TOKEN=
DISCORD_CLIENT_ID=
DISCORD_GUILD_ID=
DISCORD_TICKETS_CHANNEL_ID=
DISCORD_TICKET_ROLE_ID=             # optional — role auto-added to ticket threads

# Zammad
ZAMMAD_BASE_URL=http://zammad-nginx:8080
ZAMMAD_PUBLIC_URL=https://support.example.com
ZAMMAD_API_TOKEN=
ZAMMAD_WEBHOOK_SECRET=

# Access Control
ADMIN_USER_IDS=                     # optional — comma-separated Discord user IDs (empty = everyone is admin)

# Server
PORT=3100
LOG_LEVEL=info

# AI (optional — enables /ai and /aihelp commands)
AI_API_KEY=
AI_PROVIDER=openrouter              # openrouter | openai | anthropic
AI_MODEL=                           # optional — uses provider default if unset
AI_BASE_URL=                        # optional — custom endpoint override
AI_FALLBACK_API_KEY=                # optional — fallback provider key
AI_FALLBACK_PROVIDER=               # optional — fallback provider name
AI_FALLBACK_MODEL=                  # optional — fallback model

# Web Search (optional — enables web-augmented /aihelp)
SEARCH_API_KEY=
SEARCH_PROVIDER=tavily              # tavily | brave
SEARCH_FALLBACK_API_KEY=            # optional — fallback search key
SEARCH_FALLBACK_PROVIDER=           # optional — fallback search provider

# Daily Summary (optional — posts ticket stats at specified hour)
DAILY_SUMMARY_HOUR=                 # 0-23, leave empty to disable
